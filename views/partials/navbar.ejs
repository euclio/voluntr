<nav class="navbar navbar-default" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Voluntr</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <% if (user) { %>
          <li><a href="/events">Events</a></li>
          <li><a href="/profile">Profile</a></li>
          <li><a href="/add">Add Event</a></li>
        <% } %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if (!user) { %>
          <li><a href="/register">Register</a></li>
          <li>
            <div>
              <a href="/login" class="btn btn-primary navbar-btn">Login</a>
            </div>
          </li>
        <% } else { %>
          <li><p class="navbar-text">Logged in as <%= user.name %></p></li>
          <li>
            <div>
              <a href="/logout" class="btn btn-default navbar-btn">Logout</a>
            </div>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
<div class="container">
    <% if (messages.error) { %>
        <% for (var i = 0; i < messages.error.length; i++) { %>
            <div class="alert alert-danger" role="alert">
                <strong>Error:</strong> <%= messages.error[i] %>
            </div>
        <% } %>
    <% } %>
    <% if (messages.success) { %>
        <% for (var i = 0; i < messages.success.length; i++) { %>
            <div class="alert alert-success" role="alert">
                <%= messages.success[i] %>
            </div>
        <% } %>
    <% } %>
    <% if (messages.info) { %>
        <% for (var i = 0; i < messages.info.length; i++) { %>
            <div class="alert alert-info" role="alert">
                <%= messages.info[i] %>
            </div>
        <% } %>
    <% } %>

</div>
